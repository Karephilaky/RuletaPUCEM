<script is:client type="module">
  window.addEventListener("DOMContentLoaded", () => {
    const opciones = [
      "Fumas algo desconocido en una fiesta y te sientes paranoico por dÃ­as",
      "Un policÃ­a te encuentra con una pastilla que no sabes quÃ© es",
      "Tus amigos te graban bajo efectos y suben un video sin tu consentimiento",
